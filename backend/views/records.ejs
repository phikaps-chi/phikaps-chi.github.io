        </div>
    </div>

    <script>
        // ===== PASTE YOUR LINEAGE TREE LINKS HERE =====
        const lineageLinks = {
            'rickyd': 'https://www.familyecho.com/?c=xhxey2zirbid82ni&f=402441897246787377',      // Replace with actual link
            'westcott': 'https://www.familyecho.com/?c=mojuzetnd1ufhfej&f=919923507391968640',   // Replace with actual link
            'noname': 'https://www.familyecho.com/?c=jy6em3rkh1zt7g0w&f=481486983578110078'       // Replace with actual link
        };
        // ==============================================

        const lineageTitles = {
            'rickyd': 'Ricky D Lineage Tree',
            'westcott': 'Westcott Lineage Tree',
            'noname': 'No Name Lineage Tree'
        };

        function toggleSubmenu(button) {
            const submenu = button.nextElementSibling;
            const isOpen = submenu.classList.contains('open');

            // Close all other submenus
            document.querySelectorAll('.submenu').forEach(sm => {
                sm.classList.remove('open');
            });
            document.querySelectorAll('.menu-button').forEach(btn => {
                btn.classList.remove('active');
            });

            // Toggle current submenu
            if (!isOpen) {
                submenu.classList.add('open');
                button.classList.add('active');
            }
        }

        function showLineage(lineage) {
            const modal = document.getElementById('lineageModal');
            const iframe = document.getElementById('lineageIframe');
            const title = document.getElementById('lineageTitle');

            // Set the title
            title.textContent = lineageTitles[lineage] || 'Lineage Tree';

            // Set the iframe source
            const link = lineageLinks[lineage];
            if (link && link !== 'PASTE_RICKY_D_LINK_HERE' && link !== 'PASTE_WESTCOTT_LINK_HERE' && link !== 'PASTE_NO_NAME_LINK_HERE') {
                iframe.src = link;
                modal.classList.add('active');
            } else {
                alert('Please update the lineage link in the HTML file first!\n\nFind the "lineageLinks" object in the script and replace:\n' +
                      `lineageLinks['${lineage}'] with your actual link.`);
            }
        }

        function closeLineageModal() {
            const modal = document.getElementById('lineageModal');
            const iframe = document.getElementById('lineageIframe');

            modal.classList.remove('active');

            // Clear iframe source to stop loading
            setTimeout(() => {
                iframe.src = '';
            }, 300);
        }

        // Close modal when clicking outside the content
        document.getElementById('lineageModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeLineageModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeLineageModal();
            }
        });
    </script>
</body>
</html>
